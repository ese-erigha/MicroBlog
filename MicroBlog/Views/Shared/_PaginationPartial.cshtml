@using MicroBlog.Models.ViewModels
@model PaginationViewModel

<div class="row">
    <!--Pagination -->
    <div class="col-xs-12">
        <nav aria-label="pagination example">
            <ul class="pagination pg-blue mb-0">
                <!--First-->

                <li class="page-item @(Model.CurrentPage==1?"disabled":"")"><a asp-controller="Account" asp-action="Users" asp-route-PageNumber="1" class="page-link">First</a></li>
                <!--Arrow left-->
                @if (Model.HasPrevious)
                {
                    <li class="page-item @(Model.CurrentPage==1?"disabled":"")">
                        <a asp-controller="Account" asp-action="Users" asp-route-PageNumber="@(Model.CurrentPage - 1)" class="page-link" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }


                <!--Pages-->
                @for (var i = Model.StartPage; i <= Model.EndPage; ++i)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active":"")"><a asp-controller="Account" asp-action="Users" asp-route-PageNumber="@i" class="page-link">@i</a></li>
                }

                <!--Arrow right-->
                @if (Model.HasNext)
                {
                    <li class="page-item">
                        <a asp-controller="Account" asp-action="Users" asp-route-PageNumber="@(Model.CurrentPage + 1)" class="page-link" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }

                <!--Last-->
                <li class="page-item @(Model.CurrentPage== Model.TotalPages?"disabled":"")"><a asp-controller="Account" asp-action="Users" asp-route-PageNumber="@Model.TotalPages" class="page-link">Last</a></li>
            </ul>
        </nav>
    </div>
</div>